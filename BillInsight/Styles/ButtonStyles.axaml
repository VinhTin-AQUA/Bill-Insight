    <Style Selector="Button.send-button /template/ ContentPresenter">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="FontSize" Duration="0:0:0.2" />
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    
    
</Styles>
