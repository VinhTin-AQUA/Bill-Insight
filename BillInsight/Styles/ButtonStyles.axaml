    </Style>
        
    <!-- press -->
    <Style Selector="Button.add-pic-button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#22c55e"/>
    </Style>
        
    <Style Selector="Button.add-pic-button /template/ ContentPresenter">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="FontSize" Duration="0:0:0.2" />
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    
    <!-- =============== send-button =============== -->
    <Style Selector="Button.send-button">
        <Setter Property="Background" Value="#1e40af" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
        
    <!-- hover -->
    <Style Selector="Button.send-button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#93c5fd"/>
    </Style>
        
    <!-- press -->
    <Style Selector="Button.send-button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3b82f6"/>
