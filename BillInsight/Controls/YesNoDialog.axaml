<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogHostAvalonia="using:DialogHostAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BillInsight.Controls.YesNoDialog">
    <StackPanel>
        <TextBlock Text="Bạn có chắc chắn không?" Margin="0 0 0 10"/>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Đồng ý"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=dialogHostAvalonia:DialogHost}, Path=CloseDialogCommand}"
                    CommandParameter="OK" />
            <Button Content="Hủy"
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=dialogHostAvalonia:DialogHost}, Path=CloseDialogCommand}"
                    CommandParameter="Cancel" />
        </StackPanel>
    </StackPanel>
</UserControl>
