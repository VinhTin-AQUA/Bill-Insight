<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BillInsight.ViewModels"
             xmlns:controls="using:BillInsight.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:InvoiceDetailsViewModel"
             x:Class="BillInsight.Views.InvoiceDetailsView">
    
    <UserControl.DataContext>
        <vm:InvoiceDetailsViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        
        <ItemsControl ItemsSource="{Binding InvoiceDetails}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="12" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            Background="#FFFFFF"
                            Padding="16"
                            Margin="8"
                            BoxShadow="0 2 8 #22000000">

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="NgÃ y:" 
                                           Foreground="#666"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding DatePurchased}"
                                           Foreground="#222"
                                           FontWeight="Medium" />
                            </StackPanel>

                            <Separator Margin="0,8,0,8" Opacity="0.4" />

                            <controls:InvoiceDetailsItem Products="{Binding Items}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

      
    </ScrollViewer>
</UserControl>
