<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:BillInsight.ViewModels"
             x:DataType="vm:StatisticalViewModel"
             x:Class="BillInsight.Views.StatisticalView">
    
    <UserControl.DataContext>
        <vm:StatisticalViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer>
        <Grid Margin="20" RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*,*"
              RowSpacing="20" ColumnSpacing="20">

            <!-- Row 1 -->
            <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black" Text="Tổng tiền mặt đã dùng" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding TotalCashUsed}" FontSize="24" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tổng ngân hàng đã dùng" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding TotalBankUsed}" FontSize="24" Foreground="#2196F3"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tổng tiền mặt mỗi tháng" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding MonthlyCashTotal}" FontSize="24" Foreground="#FF9800"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="3" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tổng tiền ngân hàng mỗi tháng" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding MonthlyBankTotal}" FontSize="24" Foreground="#9C27B0"/>
                </StackPanel>
            </Border>

            <!-- Row 2 -->
            <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tiền mặt còn lại" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding RemainingCash}" FontSize="24" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tiền ngân hàng còn lại" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding RemainingBank}" FontSize="24" Foreground="#2196F3"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Background="White" CornerRadius="10" Padding="15" >
                <StackPanel>
                    <TextBlock Foreground="Black"  Text="Tổng tiền còn lại" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding TotalRemaining}" FontSize="28" Foreground="#f44336" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
