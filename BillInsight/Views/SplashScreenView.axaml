<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BillInsight.ViewModels"
        mc:Ignorable="d" 
        d:DesignWidth="500" 
        d:DesignHeight="300"
        x:Class="BillInsight.Views.SplashScreenView"
        SystemDecorations="None"
        x:DataType="vm:SplashScreenViewModel"
        WindowStartupLocation="CenterScreen"
        Width="500"
        Height="300"
        Background="White"
        Title="SplashWindow">
    
    <!-- <UserControl.DataContext> -->
    <!--     <vm:SplashScreenViewModel/> -->
    <!-- </UserControl.DataContext> -->
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}" Foreground="Black" FontWeight="SemiBold" FontSize="26" />
    </StackPanel>
</Window>
